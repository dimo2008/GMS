{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "build",
      "type": "shell",
      "command": "cd backend && npm run build",
      "group": {
        "kind": "build",
        "isDefault": true
      }
    },
    {
      "label": "dev",
      "type": "shell",
      "command": "cd backend && npm run dev",
      "group": {
        "kind": "test",
        "isDefault": true
      }
    },
    {
      "label": "start",
      "type": "shell",
      "command": "cd backend && npm start",
      "group": "none"
    }
    ,
    {
      "label": "clean & rebuild",
      "type": "shell",
  "command": "cd backend; Remove-Item -Recurse -Force .\\dist, .\\node_modules; npm install; npm run build",
      "group": "build"
    }
  ]
}